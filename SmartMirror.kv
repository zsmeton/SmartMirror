#:kivy 1.10.1

# Widgets #
<LoadingIcon>:
    size_hint: None, None
    center_x: int(root.width/ 2)
    center_y: int(root.height/ 2)
    canvas:
        # Outer Circle
        Color:
            rgb: 0,225,255
        Ellipse:
            pos: self.center_x - int(self.size_x/2), self.center_y - int(self.size_y/2)
            size: self.size
            angle_start: self.starting_angle
            angle_end: self.ending_angle
        Color:
            rgb: self.other_color
        Ellipse:
            pos: self.center_x - int((self.size_x - self.thickness)/2), self.center_y - int((self.size_y - self.thickness)/2)
            size: self.size_x - self.thickness, self.size_y - self.thickness
            angle_start: 0
            angle_end: 360
        # Inner Circle
        Color:
            rgb: self.inner_color
        Ellipse:
            pos: self.center_x - int(self.size_x/4), self.center_y - int(self.size_y/4)
            size: self.size_x/2, self.size_y/2
            angle_start: self.ending_angle+360
            angle_end: self.starting_angle
        Color:
            rgb: self.other_color
        Ellipse:
            pos: self.center_x - int((self.size_x/2 - self.thickness)/2), self.center_y - int((self.size_y/2 - self.thickness)/2)
            size: self.size_x/2 - self.thickness, self.size_y/2 - self.thickness
            angle_start: 0
            angle_end: 360

<WeatherIcon>:
    image: image_icon

    size_hint: None, None
    canvas:
        # Main Circle
        Color:
            rgb: self.other_color
        Ellipse:
            pos: self.center_x - int(self.size_x/2), self.center_y - int(self.size_y/2)
            size: self.size
            angle_start: 0
            angle_end: 360
        Color:
            rgb: self.fill_color
        Ellipse:
            pos: self.center_x - int(self.size_x/2), self.center_y - int(self.size_y/2)
            size: self.size
            angle_start: 0
            angle_end: self.ending_angle


    Image:
        id: image_icon
        source: self.source
        size: root.size
        pos: root.center_x - int(root.size_x/2), root.center_y-int(root.size_y/2)

<WeatherDisplay>:
    current_icon: current_shape
    size_hint: 0.2, 0.2

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        WeatherIcon:
            id: current_shape
            center: root.center

# Screens #

<SleepScreen>:
    screen_manager: self.screen_manager

<MainScreen>:
    screen_manager: self.screen_manager
    weather_widget: weather

    AnchorLayout:
        anchor_y:'top'
        anchor_x:'right'
        WeatherDisplay:
            id: weather
            center: root.center

<CalendarScreen>:
    screen_manager: self.screen_manager

<WeatherScreen>:
    screen_manager: self.screen_manager